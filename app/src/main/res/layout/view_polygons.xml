<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Countï¼š" />

        <TextView
            android:id="@+id/tv_polygon_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_count_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_centerLine_color"
            android:layout_weight="6"
            android:text="add" />

        <Button
            android:id="@+id/btn_count_sub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_centerLine_color"
            android:layout_toRightOf="@id/btn_count_add"
            android:layout_weight="6"
            android:text="sub" />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_polygons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>